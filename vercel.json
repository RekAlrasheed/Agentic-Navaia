{
  "framework": "nextjs",
  "regions": ["iad1"],
  "buildCommand": "npm run build",
  "installCommand": "npm install && pip install -r backend/requirements.txt",
  "env": {
    "ELEVENLABS_API_KEY": "@elevenlabs-api-key",
    "ELEVENLABS_SUPPORT_AGENT_ID": "@elevenlabs-support-agent-id", 
    "ELEVENLABS_SALES_AGENT_ID": "@elevenlabs-sales-agent-id",
    "NEXT_PUBLIC_BACKEND_URL": "https://voice-agent-portal.vercel.app",
    "NEXT_PUBLIC_ELEVENLABS_SUPPORT_AGENT_ID": "@next-public-elevenlabs-support-agent-id",
    "NEXT_PUBLIC_ELEVENLABS_SALES_AGENT_ID": "@next-public-elevenlabs-sales-agent-id"
  },
  "functions": {
    "src/app/api/**/*.ts": {
      "runtime": "nodejs18.x",
      "maxDuration": 30
    },
    "api/backend/**/*.py": {
      "runtime": "python3.9",
      "maxDuration": 30
    }
  },
  "redirects": [
    {
      "source": "/",
      "destination": "/playground",
      "permanent": false
    }
  ],
  "rewrites": [
    {
      "source": "/api/backend/:path*",
      "destination": "/api/backend/:path*"
    },
    {
      "source": "/api/:path*",
      "destination": "/api/:path*"
    }
  ]
}
